{
	"name": "svelte-spectre",
	"version": "0.1.0",
	"private": true,
	"main": "./package/index.js",
	"files": [
		"package/"
	],
	"type": "module",
	"scripts": {
		"dev": "svelte-kit dev --port 3030 --host '0.0.0.0'",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"package": "svelte-kit package && prettier --ignore-path .gitignore --write package",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write .",
		"test": "uvu tests '.spec.ts' -r tsm -r tests/setup/register -i setup"
	},
	"engines": {
		"node": ">= 14"
	},
	"prettier": {
		"tabWidth": 4,
		"semi": true,
		"singleQuote": true,
		"svelteSortOrder": "options-markup-scripts-styles",
		"svelteStrictMode": false,
		"svelteBracketNewLine": true,
		"svelteAllowShorthand": true,
		"svelteIndentScriptAndStyle": true,
		"plugins": [
			"prettier-plugin-svelte"
		]
	},
	"devDependencies": {
		"@ctrl/tinycolor": "^3.4.0",
		"@poppanator/sveltekit-svg": "^0.1.7",
		"@sveltejs/adapter-static": "1.0.0-next.20",
		"@sveltejs/kit": "^1.0.0-next.196",
		"@types/jsdom": "^16.2.13",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"autoprefixer": "^10.4.0",
		"cssnano": "^5.0.11",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"jsdom": "^18.1.0",
		"mdsvex": "^0.9.8",
		"micromatch": "^4.0.4",
		"pirates": "^4.0.1",
		"postcss": "^8.3.11",
		"postcss-load-config": "^3.1.0",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.5.0",
		"sass": "^1.43.4",
		"spectre.css": "^0.5.9",
		"svelte": "^3.44.2",
		"svelte-check": "^2.2.10",
		"svelte-loader": "^3.1.2",
		"svelte-media": "^0.1.5",
		"svelte-morphing-modal": "^2.2.0",
		"svelte-preprocess": "^4.9.8",
		"svelte2tsx": "^0.4.10",
		"tslib": "^2.3.1",
		"tsm": "^2.1.4",
		"typescript": "^4.5.2",
		"uvu": "^0.5.2"
	}
}
