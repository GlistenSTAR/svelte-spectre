{
	"name": "svelte-spectre",
	"version": "0.2.1",
	"description": "UI-kit based on spectre.css and powered by SvelteJS",
	"main": "./package/index.js",
	"files": [
		"package/"
	],
	"type": "module",
	"scripts": {
		"dev": "svelte-kit dev --port 3030 --host '0.0.0.0'",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"package": "svelte-kit package && sass src/lib/spectre.scss package/spectre.css  --style=compressed --no-source-map --quiet-deps && prettier --ignore-path .gitignore --write \"{,package/**/}*.{js,ts,md,svelte}\"",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write \"{,(src|tests|package)/**/}*.{js,ts,md,svelte}\"",
		"test": "uvu tests '.spec.ts' -r tsm -r tests/setup/register -i setup"
	},
	"author": "Alexander Volkov",
	"license": "BSD 3-Clause",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/basf/svelte-spectre.git"
	},
	"engines": {
		"node": ">= 14"
	},
	"prettier": {
		"tabWidth": 4,
		"semi": true,
		"singleQuote": true,
		"svelteSortOrder": "options-markup-scripts-styles",
		"svelteStrictMode": false,
		"svelteAllowShorthand": true,
		"svelteIndentScriptAndStyle": true,
		"plugins": [
			"prettier-plugin-svelte"
		]
	},
	"devDependencies": {
		"@poppanator/sveltekit-svg": "^0.2.3",
		"@sveltejs/adapter-static": "^1.0.0-next.27",
		"@sveltejs/kit": "^1.0.0-next.263",
		"@types/jsdom": "^16.2.14",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
		"@typescript-eslint/parser": "^5.11.0",
		"autoprefixer": "^10.4.2",
		"cssnano": "^5.0.17",
		"eslint": "^8.8.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.4.0",
		"jsdom": "^19.0.0",
		"mdsvex": "^0.10.5",
		"micromatch": "^4.0.4",
		"pirates": "^4.0.5",
		"postcss": "^8.4.6",
		"postcss-load-config": "^3.1.1",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"sass": "^1.49.7",
		"spectre.css": "^0.5.9",
		"svelte": "^3.46.4",
		"svelte-check": "^2.4.3",
		"svelte-loader": "^3.1.2",
		"svelte-media": "^0.1.5",
		"svelte-morphing-modal": "^2.2.0",
		"svelte-preprocess": "^4.10.3",
		"svelte2tsx": "^0.5.3",
		"tslib": "^2.3.1",
		"tsm": "^2.2.1",
		"typescript": "^4.5.5",
		"uvu": "^0.5.3"
	},
	"dependencies": {
		"@ctrl/tinycolor": "^3.4.0"
	}
}
